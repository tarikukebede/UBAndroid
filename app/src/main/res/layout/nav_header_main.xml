<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorPrimary"
    android:gravity="bottom"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:paddingTop="@dimen/margin_normal">


    <LinearLayout
        android:id="@+id/nav_header_user_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_x_large"
        android:gravity="start"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/initial_bg"
                android:layout_width="@dimen/circle_image_size_normal"
                android:layout_height="@dimen/circle_image_size_normal"
                android:background="@drawable/ic_circle_accent"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/nav_header_user_initial"
                android:layout_width="@dimen/circle_image_size_normal"
                android:layout_height="@dimen/circle_image_size_normal"
                android:layout_alignStart="@+id/initial_bg"
                android:layout_alignTop="@+id/initial_bg"
                android:layout_alignBottom="@+id/initial_bg"
                android:gravity="center"
                android:text="@string/dummy_initials"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/nav_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/dummy_name"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_x_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nav_header_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_username"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_x_medium" />


    </LinearLayout>
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/sw_dark_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nav_header_user_info_container"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>